# Written and tested in PSVersion 5.1.15063.483
# Input: A stupid and mostly useless Powershell script made for learning purposes.
# Output: a StUpId AnD mOsTlY uSeLeSs PoWeRsHeLl ScRiPt MaDe FoR lEaRnInG pUrPoSeS.

$Inc = Get-Random (0,1); $Special = "[\w]"; $Result = @(); $Exit = 3
foreach ($Char in ((Read-Host "What do you want to SpOnGeBoBiFy").ToCharArray()))
{
    if (($Special -notcontains $Char) -and ($Char -ne " "))
    {
        switch ($Inc % 2 -eq 0)
        {
            {$_ -eq $true} {$Result += $Char.ToString().ToUpper(); $Inc++}
            {$_ -eq $false} {$Result += $Char.ToString().ToLower(); $Inc++}
        }
    }
    else
    {
        $Result += $Char
    }
}
$SpOnGeBoB = $Result -join ""; Set-Clipboard $SpOnGeBoB
""; Write-Host -ForegroundColor Yellow $SpOnGeBoB
""; Write-Host -ForegroundColor Green "The result has been copied to clipboard!"; ""
while ($Exit -ne "0")
    {
    Write-Host -ForegroundColor Red "This window will close in $Exit seconds"; $Exit--; Start-Sleep -Seconds 1
    }
